# Application
NODE_ENV=development
PORT=3000

# MongoDB
MONGO_URI=mongodb://username:password@localhost:27017/polyclinic_uz
MONGO_USERNAME=username
MONGO_PASSWORD=password
MONGO_DATABASE=polyclinic_uz

# JWT
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Redis
REDIS_URI=redis://:password@localhost:6379
REDIS_PASSWORD=password

# RabbitMQ
RABBITMQ_URI=amqp://user:password@localhost:5672
RABBITMQ_USER=user
RABBITMQ_PASSWORD=password

# Email (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password
SMTP_FROM_EMAIL=noreply@e-polyclinic.uz

# Frontend
FRONTEND_URL=http://localhost:80

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_DOMAIN=https://your-domain.com

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Monitoring & Logging
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin_password

# API Configuration
API_URL=http://localhost:3000/api